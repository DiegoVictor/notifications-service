{
  "openapi": "3.0.2",
  "info": {
    "title": "Notifications Service",
    "version": "1.0",
    "license": {
      "name": "MIT",
      "url": "https://raw.githubusercontent.com/DiegoVictor/notifications-service/main/LICENSE"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/notifications": {
      "post": {
        "tags": ["notifications"],
        "summary": "Create new notifications",
        "description": "Create new notifications",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "title": "Notification",
                "properties": {
                  "recipientId": {
                    "type": "string"
                  },
                  "content": {
                    "type": "string"
                  },
                  "category": {
                    "type": "string"
                  }
                },
                "required": ["recipientId", "content", "category"]
              },
              "example": {
                "recipientId": "f42d512a-769a-47e4-8caf-e31f727ebb8a",
                "content": "New friendship request",
                "category": "Social"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Return the notification created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Notification"
                },
                "example": {
                  "id": "1bb8945c-a512-43b1-938d-3cd5f9471f5f",
                  "content": "New friendship request",
                  "category": "Social",
                  "recipientId": "f42d512a-769a-47e4-8caf-e31f727ebb8a"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Notification": {
        "properties": {
          "id": {
            "type": "string"
          },
          "recipientId": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "category": {
            "type": "string"
          }
        }
      }
    }
  }
}
